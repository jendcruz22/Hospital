@{
    ViewBag.Title = "NewPatient";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Patient/ListPatient">Back to Home</a>
    </nav>
</div>

<h2>New Patient Entry</h2>

<form method="POST" action="/Patient/CreatePatient">
    <div class="form-horizontal">
        <div class="form-group">
            <label for="FName">First Name: </label>
            <input type="text" name="FName" id="FName" />
        </div>
        <div class="form-group">
            <label for="LName">Last Name: </label>
            <input type="text" name="LName" id="LName" />
        </div>
        <div class="form-group">
            <label for="HC">Health Card No: </label>
            <input type="text" name="HC" id="HC" />
        </div>
        <div class="form-group">
            <label for="Contact">Contact No: </label>
            <input type="number" name="Contact" id="Contact" />
        </div>
        <div class="form-group">
            <label for="Address">Address: </label>
            <input type="text" name="Address" id="Address" />
        </div>
        <div class="form-group">
            <label for="DOB">Date of Birth: </label>
            <input type="date" name="DOB" id="DOB" />
        </div>
        <div>
            <input class="btn btn-default" type="submit" value="Create New Patient" />
        </div>
    </div>
</form>

