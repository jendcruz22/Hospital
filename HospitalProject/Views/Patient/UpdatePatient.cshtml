@model HospitalProject.Models.Patient

@{
    ViewBag.Title = "UpdatePatient";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Patient/ShowPatient/@Model.PID">Back to Home</a>
    </nav>
</div>

<form method="POST" action="/Patient/UpdatePatient/@Model.PID">
    <div class="form-horizontal">
        <h2>Update Patient</h2>
        <hr />
        <div class="form-group">
            <label for="FName">First Name: </label>
            <input type="text" name="FName" id="FName" value="@Model.FName" />
        </div>
        <div class="form-group">
            <label for="LName">Last Name: </label>
            <input type="text" name="LName" id="LName" value="@Model.LName" />
        </div>
        <div class="form-group">
            <label for="HC">Patient HC: </label>
            <input type="text" name="HC" id="HC" value="@Model.HC" />
        </div>
        <div class="form-group">
            <label for="Address">Address: </label>
            <input type="text" name="Address" id="Address" value="@Model.Address" />
        </div>
        <div class="form-group">
            <label for="DOB">Date of Release: </label>
            <input type="text" name="DOB" id="DOB" value="@Model.DOB" />
        </div>
        <div class="form-group">
            <label for="Contact">Contact: </label>
            <input type="number" name="Contact" id="Contact" value="@Model.Contact" />
        </div>
        <div>
            <input class="btn btn-default" type="submit" value="Update Patient" />
        </div>
    </div>
</form>
