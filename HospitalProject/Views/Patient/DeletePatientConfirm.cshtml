@model HospitalProject.Models.Patient

@{
    ViewBag.Title = "DeleteConfirm";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Patient/ShowPatient/@Model.Id">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete @Model.FName?</h2>
    <p>This action cannot be undone.</p>

    <form method="POST" action="/Patient/DeletePatient/@Model.Id">
        <button class="delbutton">
            Confirm Delete
        </button>
    </form>

</div>

